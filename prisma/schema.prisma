generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Festival {
  id        Int                     @id @default(autoincrement())
  name      String
  parkName  String
  startDate DateTime
  endDate   DateTime
  booths    FestivalBoothInstance[]

  @@unique([name, startDate], name: "name_startDate")
}

model Booth {
  id    Int                     @id @default(autoincrement())
  name  String                  @unique
  area  String
  years FestivalBoothInstance[]
}

model FestivalBoothInstance {
  id         Int      @id @default(autoincrement())
  festival   Festival @relation(fields: [festivalId], references: [id])
  festivalId Int
  booth      Booth    @relation(fields: [boothId], references: [id])
  boothId    Int

  @@unique([festivalId, boothId], name: "festivalId_boothId")
}
